server {
   listen 80;

   location /api {
     proxy_set_header X-Real-IP $remo_addr;
     proxy_set_header X-Forwarded-For IP $proxy_addr_x_forwarded_for;

     proxy_set_header Host $http_host;
     proxy_set_header X-NginX-Proxy true;
     proxy_pass http://node-app:5000;
     proxy_redirect off;

   }
 }